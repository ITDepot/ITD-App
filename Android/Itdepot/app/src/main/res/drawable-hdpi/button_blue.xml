<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>

            <padding android:bottom="@dimen/small_padding" android:left="@dimen/high_padding" android:right="@dimen/high_padding" android:top="@dimen/small_padding" />
            <corners android:bottomLeftRadius="@dimen/high_padding" android:bottomRightRadius="@dimen/high_padding" android:topLeftRadius="@dimen/high_padding" android:topRightRadius="@dimen/high_padding" />
            <solid android:color="@color/blue_light" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>

            <padding android:bottom="@dimen/small_padding" android:left="@dimen/high_padding" android:right="@dimen/high_padding" android:top="@dimen/small_padding" />
            <corners android:bottomLeftRadius="@dimen/high_padding" android:bottomRightRadius="@dimen/high_padding" android:topLeftRadius="@dimen/high_padding" android:topRightRadius="@dimen/high_padding" />
            <solid android:color="@color/button_blue" />
        </shape>
    </item>
    <item>
        <shape>

            <padding android:bottom="@dimen/small_padding" android:left="@dimen/high_padding" android:right="@dimen/high_padding" android:top="@dimen/small_padding" />
            <corners android:bottomLeftRadius="@dimen/high_padding" android:bottomRightRadius="@dimen/high_padding" android:topLeftRadius="@dimen/high_padding" android:topRightRadius="@dimen/high_padding" />
            <gradient android:angle="270" android:endColor="@color/button_blue" android:startColor="@color/button_blue" />
        </shape>
    </item>
</selector>