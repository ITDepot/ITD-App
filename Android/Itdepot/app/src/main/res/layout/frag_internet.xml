<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/high_padding"
        android:layout_marginRight="@dimen/high_padding"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/phone_service_button" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/very_high_padding"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/new_selected_internet" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/very_high_padding"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/cabling_button" />
    </LinearLayout>

    <TextView
        style="@style/big_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_black"
        android:gravity="center"
        android:padding="@dimen/common_padding"
        android:text="@string/internet"
        android:textColor="@color/white"
        android:visibility="gone" />

    <TextView
        style="@style/big_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/high_padding"
        android:layout_marginTop="@dimen/high_padding"
        android:text="@string/consideration"
        android:textColor="@color/colorBlue"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/back_internet" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llTempInt"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/very_high_padding"
                        android:layout_marginRight="@dimen/very_high_padding"
                        android:layout_marginTop="@dimen/high_padding"
                        android:background="@drawable/layout_border_black"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_bottom"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                style="@style/small_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"
                                android:padding="@dimen/common_padding"
                                android:singleLine="true"
                                android:text="@string/lblcost" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.35"
                                android:background="@drawable/boder_black_left"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/small_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border_bottom"
                                    android:singleLine="true"
                                    android:text="@string/dsl" />

                                <TextView
                                    style="@style/small_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border_bottom"
                                    android:singleLine="true"
                                    android:text="@string/lblt1" />

                                <TextView
                                    style="@style/small_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border_bottom"
                                    android:singleLine="true"
                                    android:text="@string/moe" />

                                <TextView
                                    style="@style/small_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/small_m"
                                    android:paddingLeft="@dimen/common_padding"
                                    android:singleLine="true"
                                    android:text="@string/fiber" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.35"
                                android:background="@drawable/boder_black_left"
                                android:orientation="vertical"

                                android:weightSum="1">

                                <TextView
                                    style="@style/small_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border_bottom"
                                    android:paddingLeft="@dimen/common_padding"
                                    android:singleLine="true"
                                    android:text="@string/dsl_value"
                                    android:textColor="@color/colorBlue" />

                                <TextView
                                    style="@style/small_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border_bottom"
                                    android:singleLine="true"
                                    android:text="@string/t1_value"
                                    android:textColor="@color/colorBlue" />

                                <TextView
                                    style="@style/small_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border_bottom"
                                    android:singleLine="true"
                                    android:text="@string/moe_value"
                                    android:textColor="@color/colorBlue" />

                                <TextView
                                    style="@style/small_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="@dimen/small_m"
                                    android:paddingLeft="@dimen/common_padding"
                                    android:singleLine="true"
                                    android:text="@string/fiber_value"
                                    android:textColor="@color/colorBlue" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginLeft="@dimen/small_l"
                            android:background="@color/off_white"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:background="@drawable/border_bottom"
                                android:orientation="vertical"></LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:background="@drawable/border_bottom_layout"
                                android:orientation="vertical" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_bottom"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                style="@style/small_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"
                                android:singleLine="true"

                                android:text="@string/install" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.35"
                                android:background="@drawable/boder_black_left"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/small_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border_bottom"
                                    android:singleLine="true"
                                    android:text="@string/dsl" />

                                <TextView
                                    style="@style/small_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small_m"
                                    android:singleLine="true"
                                    android:text="@string/lblt1" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.35"
                                android:background="@drawable/boder_black_left"
                                android:orientation="vertical"
                                android:weightSum="1">

                                <TextView
                                    style="@style/small_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border_bottom"
                                    android:singleLine="true"
                                    android:text="@string/days"
                                    android:textColor="@color/colorBlue" />

                                <TextView
                                    style="@style/small_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/small_m"
                                    android:singleLine="true"
                                    android:text="@string/t1_days"
                                    android:textColor="@color/colorBlue" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginLeft="@dimen/small_l"
                            android:background="@color/off_white"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:background="@drawable/border_bottom"
                                android:orientation="vertical"></LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:background="@drawable/border_bottom_layout"
                                android:orientation="vertical" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/small_l"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                style="@style/small_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"
                                android:padding="@dimen/common_padding"
                                android:singleLine="true"
                                android:text="@string/variables" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.70"
                                android:background="@drawable/boder_black_left"
                                android:orientation="vertical"
                                android:paddingRight="@dimen/common_padding">

                                <TextView
                                    style="@style/small_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border_bottom"
                                    android:singleLine="true"
                                    android:text="@string/avaible_add"
                                    android:textColor="@color/colorBlue" />

                                <TextView
                                    style="@style/small_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border_bottom"
                                    android:singleLine="true"
                                    android:text="@string/bandwidth"
                                    android:textColor="@color/colorBlue" />

                                <TextView
                                    style="@style/small_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border_bottom"
                                    android:singleLine="true"
                                    android:text="@string/contract_lenth"
                                    android:textColor="@color/colorBlue" />

                                <TextView
                                    style="@style/small_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border_bottom"
                                    android:singleLine="true"
                                    android:text="@string/promo_offer"
                                    android:textColor="@color/colorBlue" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTempInt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/midd_padding"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relContMeInternet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true">

                    <ImageView
                        android:id="@+id/imgContMe"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/contact_button_back" />

                    <TextView
                        style="@style/normal_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/contact_me"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relClientContInternet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/very_high_padding">

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/contact_button_back" />

                    <TextView
                        style="@style/normal_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:singleLine="true"
                        android:text="@string/contact_the_client"
                        android:textColor="@color/white" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                style="@style/normal_text"
                fontPath="fonts/Campton-SemiBold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/high_padding"
                android:layout_marginTop="@dimen/high_padding"
                android:gravity="center"
                android:text="@string/lblincome" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>