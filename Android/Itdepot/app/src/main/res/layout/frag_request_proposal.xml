<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_back"
    android:clickable="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/big_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_from_recurring"
                android:background="@color/dark_black"
                android:gravity="center"
                android:padding="@dimen/common_padding"
                android:text="@string/your_income"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/llAct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/relAct"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/common_padding"
                    android:layout_marginTop="@dimen/very_high_padding"
                    android:background="@drawable/button_back">

                    <ImageView
                        android:id="@+id/imgActLogo"
                        android:layout_width="@dimen/img_back"
                        android:layout_height="@dimen/img_back"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/services" />

                    <TextView
                        style="@style/small_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imgActLogo"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/account_page"
                        android:textColor="@color/colorBlue" />
                </RelativeLayout>

                <TextView
                    style="@style/normal_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/common_padding"
                    android:gravity="center"
                    android:text="@string/tap_pa" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/very_high_padding"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/normal_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.50"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/this_month"
                        android:textColor="@color/colorBlue" />

                    <RelativeLayout
                        android:id="@+id/relThisMonth"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/very_high_padding"
                        android:layout_weight="0.50">

                        <TextView
                            android:id="@+id/lblThisMonth"
                            style="@style/normal_text"
                            android:layout_width="@dimen/rel_income_width"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/textview_blue"
                            android:gravity="center"
                            android:paddingBottom="@dimen/common_padding"
                            android:paddingTop="@dimen/common_padding"
                            android:text="$0.00"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/midd_padding"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/normal_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.50"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="@string/monthly_recc"
                        android:textColor="@color/colorBlue" />

                    <RelativeLayout
                        android:id="@+id/relMonthlyIncome"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/very_high_padding"
                        android:layout_weight="0.50">

                        <TextView
                            android:id="@+id/lblMonthlyIncome"
                            style="@style/normal_text"
                            android:layout_width="@dimen/rel_income_width"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/textview_blue"
                            android:gravity="center"
                            android:paddingBottom="@dimen/common_padding"
                            android:paddingTop="@dimen/common_padding"
                            android:text="$0.00"
                            android:textColor="@color/white" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/big_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_from_propoasal"
                android:background="@color/dark_black"
                android:gravity="center"
                android:paddingBottom="@dimen/common_padding"
                android:paddingTop="@dimen/common_padding"
                android:singleLine="true"
                android:text="@string/your_tech"
                android:textColor="@color/white" />

            <TextView
                style="@style/normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/common_padding"
                android:gravity="center"
                android:visibility="gone"
                android:singleLine="true"
                android:text="@string/tap_button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/common_padding"
                android:layout_marginRight="@dimen/common_padding"
                android:layout_marginTop="@dimen/very_high_padding"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgInternet"
                        android:layout_width="@dimen/propsal_imgs"
                        android:layout_height="@dimen/propsal_imgs"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/internet_main" />

                    <TextView
                        style="@style/normal_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/common_padding"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/internet" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgPhoneService"
                        android:layout_width="@dimen/propsal_imgs"
                        android:layout_height="@dimen/propsal_imgs"
                        android:layout_marginLeft="@dimen/very_high_padding"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/phone_main" />

                    <TextView
                        style="@style/normal_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/common_padding"
                        android:gravity="center"
                        android:paddingLeft="@dimen/very_high_padding"
                        android:singleLine="true"
                        android:text="@string/phone_services" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/very_high_padding"
                android:layout_marginTop="@dimen/high_padding">

                <ImageView
                    android:id="@+id/imgCabling"
                    android:layout_width="@dimen/propsal_imgs"
                    android:layout_height="@dimen/propsal_imgs"

                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cable_main" />

                <TextView
                    style="@style/normal_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/common_padding"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/cabling" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_from_layout"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardInternet"
                    android:layout_width="@dimen/card_view_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/high_padding"
                    android:orientation="vertical"
                    card_view:cardBackgroundColor="@color/gray"
                    card_view:cardCornerRadius="@dimen/high_padding"
                    card_view:cardElevation="@dimen/small_l"
                    card_view:cardUseCompatPadding="false"
                    card_view:contentPadding="@dimen/small">

                    <LinearLayout
                        android:id="@+id/llInternet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblInternet"
                            style="@style/small_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/gray_light"
                            android:gravity="center"
                            android:paddingBottom="@dimen/common_padding"
                            android:paddingTop="@dimen/common_padding"
                            android:singleLine="true"
                            android:text="@string/internet" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/img_proposal"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/internet" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/card_view_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/very_high_padding"
                    android:orientation="vertical"
                    card_view:cardBackgroundColor="@color/gray"
                    card_view:cardCornerRadius="@dimen/high_padding"
                    card_view:cardElevation="@dimen/small_l"
                    card_view:cardUseCompatPadding="false"
                    card_view:contentPadding="@dimen/small">

                    <LinearLayout
                        android:id="@+id/llPhoneServices"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/small_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/gray_light"
                            android:gravity="center"
                            android:paddingBottom="@dimen/common_padding"
                            android:paddingTop="@dimen/common_padding"
                            android:singleLine="true"
                            android:text="@string/phone_services" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/img_proposal"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/phone_service" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/card_view_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/high_padding"
                android:layout_marginRight="@dimen/high_padding"
                android:layout_marginTop="@dimen/very_high_padding"
                android:orientation="vertical"
                android:padding="@dimen/common_padding"
                android:visibility="gone"
                card_view:cardBackgroundColor="@color/gray"
                card_view:cardCornerRadius="@dimen/high_padding"
                card_view:cardElevation="@dimen/small_l"
                card_view:cardUseCompatPadding="false"
                card_view:contentPadding="@dimen/small">

                <LinearLayout
                    android:id="@+id/llCabling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/small_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray_light"
                        android:gravity="center"
                        android:paddingBottom="@dimen/common_padding"
                        android:paddingTop="@dimen/common_padding"
                        android:singleLine="true"
                        android:text="@string/cabling" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/img_proposal"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/cabling" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>