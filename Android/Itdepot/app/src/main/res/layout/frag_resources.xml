<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/high_padding"
        android:layout_marginRight="@dimen/high_padding"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/imgRes1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/phone_service_button"
            android:tag="0" />

        <ImageView
            android:id="@+id/imgRes2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/very_high_padding"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/new_selected_internet"
            android:tag="0" />

        <ImageView
            android:id="@+id/imgRes3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="@dimen/very_high_padding"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/cabling_button"
            android:tag="0" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblTechName"
        style="@style/big_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_black"
        android:gravity="center"
        android:padding="@dimen/common_padding"
        android:text="@string/internet"
        android:textColor="@color/white" />

    <FrameLayout
        android:id="@+id/fragContainerResource"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>